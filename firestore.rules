// [firestore.rules]
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 共通関数 ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Timetables バリデーション ---
    function isValidNewEvent() {
      let data = request.resource.data;
      return data.keys().hasAll(['ownerUid', 'createdAt', 'eventConfig']) &&
             data.ownerUid == request.auth.uid &&
             data.eventConfig.title is string &&
             data.eventConfig.title.size() > 0 &&
             data.eventConfig.title.size() <= 100 &&
             data.eventConfig.startDate is string &&
             data.eventConfig.startTime is string;
    }

    function isValidUpdate() {
      let data = request.resource.data;
      return data.ownerUid == resource.data.ownerUid;
    }

    // --- Users バリデーション (Phase 5 新規) ---
    function isValidUserUpdate() {
      let data = request.resource.data;
      return 
        // 自分のUID以外のデータを書き込もうとしていないかチェック
        data.uid == request.auth.uid;
        // 必要に応じてフィールドの型チェックなどを追加
    }


    // --- コレクションルール ---

    // 1. Timetables (既存)
    match /timetables/{eventId} {
      allow get: if true;
      
      // リスト取得制限: 自分のデータのみ
      allow list: if isSignedIn()
                  && request.query.filters.ownerUid == request.auth.uid
                  && request.query.limit <= 300;
                  
      allow create: if isSignedIn() && isValidNewEvent();
      allow update: if isSignedIn() && isOwner(resource.data.ownerUid) && isValidUpdate();
      allow delete: if isSignedIn() && isOwner(resource.data.ownerUid);
    }

    // 2. Users (Phase 5 新規)
    // ドキュメントIDは必ず Auth UID と一致させる (/users/{uid})
    match /users/{userId} {
      // 自分のデータのみ読み書き可能
      allow get: if isSignedIn() && isOwner(userId);
      
      // 作成・更新
      allow write: if isSignedIn() 
                   && isOwner(userId)
                   && isValidUserUpdate();
    }
  }
}